cabal-version: 2.2
name:          github-samples
version:       0
category:      Examples
synopsis:      Samples for github package
license:       BSD-3-Clause
license-file:  LICENSE
maintainer:    Andreas Abel
description:   Various samples of github package
build-type:    Simple

tested-with:
  GHC == 9.6.0
  GHC == 9.4.4
  GHC == 9.2.6
  GHC == 9.0.2
  GHC == 8.10.7
  GHC == 8.8.4
  GHC == 8.6.5
  GHC == 8.4.4
  GHC == 8.2.2
  GHC == 8.0.2
  GHC == 7.10.3

library
  hs-source-dirs:   src
  ghc-options:      -Wall
  build-depends:
    , base                   >=4.7 && <5
    , base-compat-batteries
    , github
    , text

  exposed-modules:  Common
  default-language: Haskell2010

executable github-operational
  default-language: Haskell2010
  main-is:          Operational.hs
  hs-source-dirs:   Operational
  ghc-options:      -Wall -threaded
  build-depends:
    , base                   >=0 && <5
    , base-compat-batteries
    , github
    , github-samples
    , http-client
    , operational
    , text
    , transformers
    , transformers-compat

common deps
  default-language: Haskell2010
  ghc-options:
    -Wall
    -threaded
  build-depends:
    , base                   >=4.8 && <5
    , base-compat-batteries
    , base64-bytestring
    , github
    , github-samples
    , text
    , vector

